# aliases
alias docker="podman"
alias vi="nvim ."
alias gh="history | grep"
alias ls="ls -l"
alias ..="cd .."
alias ...="cd ../.."

alias gb="git checkout -b"
alias ga="git add -A"
alias gc="git commit -m"
alias gp="git push"
alias gpn="git push --set-upstream origin"
alias gP="git pull"
alias gs="git status"
alias gd="git diff"

alias wiki="cd ${HOME}/vimwiki/"
alias repos="cd ${HOME}/Documents/repos/"

# command prompt
eval "$(starship init bash)"
